<accessibility-service
    android:description="Accessibility service for Mi Bot."
    android:label="Mi Bot"
    android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
    android:settingsActivity=".SettingsActivity">

    <intent-filter>
        <action android:name="android.accessibilityservice.AccessibilityService" />
    </intent-filter>

    <canRetrieveWindowContent>true</canRetrieveWindowContent>
    <notificationTimeout>100</notificationTimeout>
    <requiresPermission>android.permission.SYSTEM_ALERT_WINDOW</requiresPermission>
</accessibility-service>